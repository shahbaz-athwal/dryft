{
  "name": "dryft",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "ci": "biome ci",
    "format": "biome format --write",
    "lint": "biome lint --fix",
    "test": "turbo run test",
    "api:start": "bun --filter hono-api start",
    "api:dev": "bun --filter hono-api dev",
    "db:studio": "bun --filter hono-api db:studio",
    "db:generate": "bun --filter hono-api db:generate",
    "db:migrate": "bun --filter hono-api db:migrate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "turbo": "^2.5.3",
    "typescript": "5.8.3",
    "ultracite": "5.3.3",
    "@types/bun": "^1.3.0"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "@types/react": "^19.2.0",
      "@types/react-dom": "^19.2.0",
      "tailwindcss": "^4.1.14",
      "@tailwindcss/postcss": "^4.1.6",
      "typescript": "^5.8.3",
      "zod": "^4.1.12",
      "better-auth": "^1.3.27",
      "@t3-oss/env-core": "^0.13.8",
      "@t3-oss/env-nextjs": "^0.13.8"
    }
  }
}
