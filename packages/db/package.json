    "clean": "rm -rf node_modules",
    "with-env": "bun --env-file ../../.env"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "prisma": "^6.17.1"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "typescript": "catalog:"
  },
  "exports": {
    "./client": "./src/client.ts"
  }
}
