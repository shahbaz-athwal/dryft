{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["@repo/db#db:generate"],
      "cache": false,
      "persistent": true
    },
    "@repo/db#db:generate": {
      "inputs": ["prisma/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
