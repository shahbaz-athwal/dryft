{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["!VERCEL_TARGET_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["POSTHOG_PERSONAL_KEY", "NEXT_PUBLIC_POSTHOG_KEY"]
    },
    "dev": {
      "dependsOn": ["hono-api#db:generate"],
      "cache": false,
      "persistent": true
    },
    "//#inngest": {
      "cache": false,
      "persistent": true
    },
    "hono-api#db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "outputs": ["node_modules/.prisma/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
